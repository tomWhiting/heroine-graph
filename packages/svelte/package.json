{
  "name": "@heroine-graph/svelte",
  "version": "0.1.0",
  "description": "Svelte wrapper for Heroine Graph - high-performance graph visualization",
  "type": "module",
  "svelte": "./dist/index.js",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "svelte-package -i src -o dist",
    "dev": "svelte-package -i src -o dist --watch",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint src --ext .ts,.svelte"
  },
  "peerDependencies": {
    "svelte": ">=5.0.0"
  },
  "dependencies": {
    "@heroine-graph/core": "workspace:*"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "svelte",
    "graph",
    "visualization",
    "webgpu",
    "heroine-graph"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/heroine-graph/heroine-graph.git",
    "directory": "packages/svelte"
  },
  "sideEffects": false
}
